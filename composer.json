{
    "name": "c11k/c11k",
    "type": "project",
    "description": "The thing I'm working on.",
    "keywords": [
    ],
    "license": "Proprietary",
    "require": {
        "php": "^7.4",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "^6.2",
        "laravel/tinker": "^1.0",
        "spatie/data-transfer-object": "^1.10",
        "spatie/laravel-permission": "^3.2.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.1",
        "barryvdh/laravel-ide-helper": "^2.4",
        "facade/ignition": "^1.4",
        "fzaninotto/faker": "^1.4",
        "laravel/ui": "^1.1",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "nunomaduro/larastan": "^0.4.3",
        "phpunit/phpunit": "^8.0",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/App/",
            "Domain\\": "app/Domain/",
            "Support\\": "app/Support/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpcs": [
            "rm -rf tests/coverage",
            "vendor/bin/phpcs --standard=PSR12 -sn app tests"
        ],
        "phpcbf": [
            "rm -rf tests/coverage",
            "vendor/bin/phpcbf --standard=PSR12 app tests"
        ],
        "pretest": [
            "vendor/bin/security-checker security:check composer.lock",
            "php artisan code:analyse",
            "rm -rf tests/coverage*",
            "composer phpcs"
        ],
        "test": "vendor/bin/phpunit --coverage-text --colors=never -d memory_limit=2048M",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
